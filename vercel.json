{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "45mb" }
    },
    {
      "src": "vercel-dramatiq.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "45mb" }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/roadmaps",
      "dest": "backend/main.py"
    },
    {
      "src": "/api/users/onboarding-status",
      "dest": "backend/main.py"
    },
    {
      "src": "/api/dashboard",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}